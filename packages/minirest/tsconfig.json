{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "outDir": "bin"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
